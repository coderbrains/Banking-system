<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Createaccount</servlet-name>
        <servlet-class>com.bankingsystem.servlets.Createaccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountCreate</servlet-name>
        <servlet-class>com.bankingsystem.servlets.AccountCreate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bankingsystem.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.bankingsystem.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlockServlet</servlet-name>
        <servlet-class>com.bankingsystem.servlets.BlockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Createaccount</servlet-name>
        <url-pattern>/Createaccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountCreate</servlet-name>
        <url-pattern>/AccountCreate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlockServlet</servlet-name>
        <url-pattern>/BlockServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
